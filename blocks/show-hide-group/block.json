{
	"$schema": "https://json.schemastore.org/block.json",
	"apiVersion": 2,
	"name": "happyprime/show-hide-group",
	"title": "Show Hide Group",
	"textdomain": "happy-prime",
	"category": "widgets",
	"description": "Creates accessible summaries that can be toggled to show or hide additional details.",
	"icon": "hidden",
	"attributes": {
		"hasToggle": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"align": true,
		"alignWide": true,
		"anchor": true,
		"color": {
			"background": true,
			"enableContrastChecker": true,
			"text": true,
			"link": true,
			"gradients": true
		},
		"defaultStylePicker": true,
		"dimensions": {
			"minHeight": true
		},
		"html": false,
		"position": {
			"sticky": false
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"lineHeight": true
		}
	},
	"editorScript": "file:../../build/show-hide-group.js"
}
